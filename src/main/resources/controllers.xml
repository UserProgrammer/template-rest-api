<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

  <!-- Controllers -->
  <bean id="userController" class="com.template.controller.UserController">
    <property name="userHandler" ref="userHandler" />
  </bean>

  <bean id="statusController" class="com.template.controller.StatusController">
  </bean>

  <!-- Handlers -->
  <bean id="userHandler" class="com.template.handler.UserHandler">
  </bean>
</beans>
